<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="co.iamartem.medicinetracker">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.AppCompat.Light.NoActionBar">
        <!--android:fullBackupContent="">-->
        <activity
            android:name=".LoginActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".RegisterActivity"
            android:parentActivityName=".LoginActivity"/>

        <activity
            android:name=".DoctorActivity"
            android:parentActivityName=".MainActivity" />

        <activity
            android:name=".PharmacyActivity"
            android:parentActivityName=".MainActivity" />

        <activity
            android:name=".NewPrescriptionActivity"
            android:parentActivityName=".MainActivity" />

        <activity
            android:name=".UpdatePrescriptionActivity"
            android:parentActivityName=".MainActivity" />


        <activity
            android:name=".ViewDoctorsActivity"
            android:parentActivityName=".MainActivity"/>

        <activity
            android:name=".UpdateDoctorActivity"
            android:parentActivityName=".ViewDoctorsActivity"/>

        <activity
            android:name=".ViewPharmaciesActivity"
            android:parentActivityName=".MainActivity"/>

        <activity
            android:name=".UpdatePharmacyActivity"
            android:parentActivityName=".ViewPharmaciesActivity"/>

        <activity android:name=".MainActivity" />


    </application>

</manifest>