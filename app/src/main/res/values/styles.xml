<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="PrimaryButton" parent="Theme.AppCompat">
        <item name="colorButtonNormal">@color/colorPrimary</item>
        <item name="colorControlHighlight">@color/colorAccent</item>
    </style>

    <style name="AngryButton" parent="Theme.AppCompat">
        <item name="colorButtonNormal">@color/colorPrimaryRed</item>
        <item name="colorControlHighlight">@color/colorWhite</item>
    </style>

    <style name="DangerButton" parent="Theme.AppCompat">
        <item name="colorButtonNormal">@color/colorAngryRed</item>
        <item name="colorControlHighlight">@color/colorWhite</item>
    </style>

    <style name="AccentButton" parent="Theme.AppCompat">
        <item name="colorButtonNormal">@color/colorAccent</item>
        <item name="colorControlHighlight">@color/colorPrimaryDark</item>
    </style>

    <style name="MyActionBar" parent="@style/Widget.AppCompat.Light.ActionBar.Solid.Inverse">
        <item name="android:icon">@drawable/ic_medicine</item>
        <item name="logo">@drawable/ic_medicine</item>
        <item name="displayOptions">useLogo|showHome|showTitle</item>
    </style>

</resources>
